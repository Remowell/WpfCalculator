<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="myGrid">
        <Button Content="Plus" FontSize="20" Height="35" VerticalAlignment="Top" Click="PlusClick"/>
        <Label x:Name="lbl" FontSize="20" VerticalAlignment="Top" Margin="0,35,0,0" Height="35"/>
        <StackPanel x:Name="myStackPanel" Margin="0,70,0,0"/>
    </Grid>
</Window>
